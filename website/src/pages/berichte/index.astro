---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Hero from "../../components/Hero.astro";

const allBerichte = await getCollection("berichte");

const sortedBerichte = allBerichte.sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

// Group by year
const byYear = sortedBerichte.reduce((acc, bericht) => {
  const year = bericht.data.date.getFullYear().toString();
  if (!acc[year]) acc[year] = [];
  acc[year].push(bericht);
  return acc;
}, {} as Record<string, typeof sortedBerichte>);

const years = Object.keys(byYear).sort((a, b) => Number(b) - Number(a));

function formatDate(date: Date) {
  return date.toLocaleDateString("de-DE", {
    day: "2-digit",
    month: "long",
    year: "numeric",
  });
}

function getGremiumColor(gremium: string) {
  switch (gremium) {
    case "Gemeinderat":
      return "badge-primary";
    case "Kreistag":
      return "badge-secondary";
    case "Ausschuss":
      return "badge-accent";
    default:
      return "badge-neutral";
  }
}
---

<BaseLayout
  title="Berichte - CDU Gemeindeverband Musterstadt"
  description="Berichte aus dem Gemeinderat und der Kreistagsfraktion"
>
  <Hero
    title="Berichte aus den Gremien"
    subtitle="Aktuelle Berichte aus dem Gemeinderat und der Kreistagsfraktion"
  />

  <section class="py-16 lg:py-24">
    <div class="container mx-auto px-4">
      {years.length === 0 && (
        <p class="text-gray-500 italic text-center">Noch keine Berichte vorhanden.</p>
      )}

      {years.map(year => (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-rhÃ¶ndorf mb-6 border-b-2 border-cadenabbia pb-2 font-sans">
            {year}
          </h2>
          <div class="space-y-4">
            {byYear[year].map(bericht => (
              <a
                href={`/berichte/${bericht.id}`}
                class="block card bg-base-100 shadow-md hover:shadow-lg transition-all hover:-translate-y-0.5"
              >
                <div class="card-body">
                  <div class="flex items-start justify-between gap-4 flex-wrap">
                    <div class="flex-1">
                      <div class="flex items-center gap-3 mb-2 flex-wrap">
                        <span class={`badge ${getGremiumColor(bericht.data.gremium)} font-sans`}>
                          {bericht.data.gremium}
                        </span>
                        <time class="text-sm text-gray-500 font-sans" datetime={bericht.data.date.toISOString()}>
                          {formatDate(bericht.data.date)}
                        </time>
                      </div>
                      <h3 class="card-title text-lg font-sans text-unionsschwarz">
                        {bericht.data.title}
                      </h3>
                      <p class="text-gray-600 mt-2">{bericht.data.excerpt}</p>
                    </div>
                    <svg class="w-5 h-5 text-cadenabbia flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
