---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="Kontakt" description="Kontaktieren Sie die CDU Musterstadt">
  <Hero
    title="Kontakt"
    subtitle="Wir freuen uns auf Ihre Nachricht"
  />

  <section class="py-16 lg:py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <div class="card bg-base-100 shadow-lg">
          <div class="card-body">
            <h2 class="card-title text-2xl font-sans text-unionsschwarz mb-6">
              CDU Gemeindeverband Musterstadt
            </h2>

            <div class="space-y-6">
              <!-- TODO: Eigene Kontaktdaten eintragen -->
              <div>
                <h3 class="font-sans font-semibold text-cadenabbia mb-2">Vorsitzender</h3>
                <p class="text-lg">Max Mustermann</p>
              </div>

              <div>
                <h3 class="font-sans font-semibold text-cadenabbia mb-2">Adresse</h3>
                <address class="not-italic">
                  Musterstraße 1<br />
                  12345 Musterstadt
                </address>
              </div>

              <div>
                <h3 class="font-sans font-semibold text-cadenabbia mb-2">Telefon</h3>
                <a href="tel:+4912345678" class="link link-hover text-lg flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  01234 / 5678
                </a>
              </div>

              <div>
                <h3 class="font-sans font-semibold text-cadenabbia mb-2">E-Mail</h3>
                <a href="mailto:info@cdu-musterstadt.de" class="link link-hover link-primary text-lg flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  info@cdu-musterstadt.de
                </a>
              </div>
            </div>

            <div class="divider"></div>

            <p class="text-gray-600">
              Schreiben Sie uns eine E-Mail oder rufen Sie uns an. Wir melden uns schnellstmöglich bei Ihnen.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
