---
const currentYear = new Date().getFullYear();

// TODO: Eigene Ortsverbände eintragen
const ortsVerbaende = [
  { name: 'CDU Ortsteil A', href: '#' },
  { name: 'CDU Ortsteil B', href: '#' },
];

const links = [
  { name: 'CDU Niedersachsen', href: 'https://cdu-niedersachsen.de' },
  { name: 'CDU Deutschland', href: 'https://cdu.de' },
];
---

<footer class="bg-rhoendorf text-white py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Kontakt -->
      <div>
        <p class="font-sans font-bold text-xl mb-4">Kontakt</p>
        <address class="not-italic text-base leading-relaxed">
          <!-- TODO: Eigene Kontaktdaten eintragen -->
          <strong>CDU Gemeindeverband Musterstadt</strong><br />
          Max Mustermann (Vorsitzender)<br />
          Musterstraße 1<br />
          12345 Musterstadt<br /><br />
          Tel: <a href="tel:+4912345678" class="hover:text-cadenabbia transition-colors">01234 / 5678</a><br />
          E-Mail: <a href="mailto:info@cdu-musterstadt.de" class="hover:text-cadenabbia transition-colors">info@cdu-musterstadt.de</a>
        </address>
      </div>

      <!-- Ortsverbände -->
      <div>
        <p class="font-sans font-bold text-xl mb-4">Ortsverbände</p>
        <ul class="space-y-2">
          {ortsVerbaende.map(ov => (
            <li>
              <a
                href={ov.href}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-cadenabbia transition-colors"
              >
                {ov.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Links -->
      <div>
        <p class="font-sans font-bold text-xl mb-4">Links</p>
        <ul class="space-y-2">
          {links.map(link => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-cadenabbia transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Rechtliches -->
      <div>
        <p class="font-sans font-bold text-xl mb-4">Rechtliches</p>
        <ul class="space-y-2">
          <li><a href="/impressum" class="hover:text-cadenabbia transition-colors">Impressum</a></li>
        </ul>
      </div>
    </div>

    <div class="border-t border-white/20 mt-12 pt-8 text-center text-sm">
      <p>&copy; {currentYear} CDU Gemeindeverband Musterstadt. Alle Rechte vorbehalten.</p>
    </div>
  </div>
</footer>
