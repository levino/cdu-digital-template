---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  firstName: string;
  lastName: string;
  amt: string;
  email?: string;
  phone?: string;
  address?: string;
  image?: ImageMetadata;
  imageUrl?: string;
}

const { firstName, lastName, amt, email, phone, address, image, imageUrl } = Astro.props;
const fullName = `${firstName} ${lastName}`;
---

<div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
  {image ? (
    <figure class="px-4 pt-4">
      <Image
        src={image}
        alt={fullName}
        class="rounded-none w-full h-auto"
        width={400}
      />
    </figure>
  ) : imageUrl ? (
    <figure class="px-4 pt-4">
      <img
        src={imageUrl}
        alt={fullName}
        class="rounded-none w-full h-auto object-cover aspect-square"
        width={400}
        height={400}
        loading="lazy"
      />
    </figure>
  ) : null}
  <div class="card-body">
    <h3 class="card-title text-unionsschwarz font-sans">{fullName}</h3>
    <span class="text-cadenabbia font-semibold font-sans text-sm">{amt}</span>

    {address && (
      <p class="text-sm text-gray-600 whitespace-pre-line mt-2">{address}</p>
    )}

    <div class="card-actions flex-col items-start gap-2 mt-4 text-sm">
      {phone && (
        <a
          href={`tel:${phone.replace(/\s/g, '')}`}
          class="link link-hover flex items-center gap-2"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {phone}
        </a>
      )}
      {email && (
        <a
          href={`mailto:${email}`}
          class="link link-hover link-primary flex items-center gap-2"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          {email}
        </a>
      )}
    </div>
  </div>
</div>
